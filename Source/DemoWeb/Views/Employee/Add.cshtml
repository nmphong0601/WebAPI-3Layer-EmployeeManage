@using DemoWeb.Models
@using DemoWeb.Ultilities

@model Employee

@{
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

@section style{
    <link href="~/Content/css/bootstrap-select.min.css" rel="stylesheet" />
    <link href="~/Content/css/fileinput.min.css" rel="stylesheet" />
    <link href="~/Content/css/summernote.css" rel="stylesheet" />

    <style type="text/css">
        label {
            font-weight: normal !important;
        }
    </style>
}
@section script{
    @*xử lí cho thanh DropDownListFor*@
    <script src="~/Content/js/bootstrap-select.min.js"></script>
    <script src="~/Content/js/fileinput.min.js"></script>
    <script src="~/Content/js/summernote.min.js"></script>
}


@*Nội dung*@

<div class="row">
    <div class="col-md-12">
        @using (Html.BeginForm("Add", "Employee", FormMethod.Post, new { @class = "form-horizontal", id = "frmAdd", enctype = "multipart/form-data" }))
        {
            <div class="form-group">
                @Html.LabelFor(m => m.FullName, "Full Name:", new { @class = "col-sm-2 control-label" })
                <div class="col-sm-4">
                    @Html.TextBoxFor(m => m.FullName, new { @class = " form-control ", placeholder = "Full Name" })
                </div>

                @Html.LabelFor(m => m.DOB, "Date Of Birth:", new { @class = "col-sm-2 control-label" })
                <div class="col-sm-4">
                    @Html.TextBoxFor(m => m.DOB, new { @class = " form-control ", placeholder = "Date Of Birth" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-3 col-sm-9">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-plus"></i>
                        &nbsp; Add
                    </button>
                </div>
            </div>
        }
    </div>
</div>