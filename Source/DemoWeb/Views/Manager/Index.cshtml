@using DemoWeb.Models
@using DemoWeb.Ultilities

@model IList<Manager>
@{
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

@section style{
    <style type="text/css">
        img {
            height: 50px;
            width: 50px;
        }
    </style>
}

@section script{
    <script type="text/javascript">
        $('a[name="aDelete"]').on('click', function () {

            var pId = $(this).data('id');
            $('#pId').val(pId);
            $('#frmDelete').submit();
        });
        //sử lí nút bấm cập nhật trong trang admin
        $('a[name="aUpdate"]').on('click', function () {

            var pId = $(this).data('id');
            $('#pIdUpdate').val(pId);
            $('#frmUpdate').submit();
        });

    </script>
}

@if (Model.Count == 0)
{
    @:No Manager Found
    <div class="row">
        <div class="col-md-12">
            <a class="btn btn-primary" href="@Url.Action("Add","Manager")" title="Add new manager">
                <i class="fa fa-plus"></i> &nbsp; Add Manager
            </a>
        </div>
    </div>
}
else
{
    <section class="content-header">
        <h1>
            Manager Management
        </h1>
    </section>

    <form id="frmDelete" method="post" action="@Url.Action("Delete", "Manager")">
        <input id="pId" type="hidden" name="id" />
    </form>

    <form id="frmUpdate" method="post" action="@Url.Action("Update", "Manager")">
        <input id="pIdUpdate" type="hidden" name="id">
    </form>


    <div class="row">
        <div class="col-md-12">
            <table class="table table-striped table-hover table-condensed">
                <thead>
                    <tr>
                        <th>STT</th>
                        <th>Full Name</th>
                        <th>Date Of Birth</th>
                        <th>&nbsp;</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int stt = 0;
                    }
                    @foreach (var employee in Model)
                    {
                        stt++;
                        <tr>
                            <td>@stt</td>
                            <td>@employee.FullName</td>
                            <td>@employee.DOB</td>
                            <td>
                                <a name="aDelete" class="btn btn-danger btn-xs" href="javascript:void;"
                                   title="Xóa" data-id="@employee.Id">
                                    <i class="fa fa-close"></i>
                                </a>
                                <a name="aUpdate" class="btn btn-success btn-xs" href="javascript:void;"
                                   title="Cập Nhật" data-id="@employee.Id">
                                    <i class="fa fa-check"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <a class="btn btn-primary" href="@Url.Action("Add","Manager")" title="Add new manager">
                <i class="fa fa-plus"></i> &nbsp; Add Manager
            </a>
        </div>
    </div>
}




